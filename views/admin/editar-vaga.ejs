<%- include('header') %>
<h2>Editar vaga:
    <a href="/admin/vagas">
        <button type="button" class="btn btn-secondary btn-sm">Voltar</button>
    </a>
</h2>
<div>
    <form method="POST">
        <label>Título:</label>
        <input type="text" name="titulo" value="<%= vaga.titulo %>">
        <label>Descrição:</label>
        <textarea  name="descricao" value="<%= vaga.descricao %>"></textarea>
        <label>Categoria:</label>
        <select name="categoria">
            <% categorias.forEach(categoria => { %>
            <option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoria){ %>selected<% } %>><%= categoria.categoria %></option>
            <% }) %>
        </select>
        <br>
        <button type="submit" class="btn btn-primary btn-sm">Salvar</button>
    </form>
</div>
<%- include('footer') %>